    <!-- Forgot password -->
    <script>
        document.getElementById('forgotPassword').addEventListener('click', function () {
            // Step 1: Prompt for phone number
            Swal.fire({
                title: 'Enter Phone Number',
                input: 'text',
                inputPlaceholder: 'Phone Number',
                showCancelButton: true,
                confirmButtonText: 'Send OTP',
                preConfirm: (phone) => {
                    // Basic validation for phone number (must be 11 digits)
                    if (!/^\d{11}$/.test(phone)) {
                        Swal.showValidationMessage('Please enter a valid 11-digit phone number.');
                        return false;
                    }
                    return phone;
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    const phone = result.value;

                    // Step 2: Send OTP to phone
                    fetch('/api/send-otp', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ phone })
                    })
                        .then(res => res.json())
                        .then(data => {
                            if (data.success) {
                                Swal.fire('Success', 'OTP sent to your phone number', 'success').then(() => {
                                    // Step 3: Prompt for OTP
                                    Swal.fire({
                                        title: 'Enter OTP',
                                        input: 'text',
                                        inputPlaceholder: 'OTP',
                                        showCancelButton: true,
                                        confirmButtonText: 'Verify OTP',
                                        preConfirm: (otp) => {
                                            if (!/^\d{6}$/.test(otp)) {
                                                Swal.showValidationMessage('Please enter a valid 6-digit code.');
                                                return false;
                                            }
                                            return otp;
                                        }
                                    }).then((otpResult) => {
                                        if (otpResult.isConfirmed) {
                                            const otp = otpResult.value;

                                            // Step 4: Verify OTP
                                            fetch('/api/otp-verify', {
                                                method: 'POST',
                                                headers: { 'Content-Type': 'application/json' },
                                                body: JSON.stringify({ phone, otp })
                                            })
                                                .then(res => res.json())
                                                .then(verifyData => {
                                                    if (verifyData.success) {
                                                        Swal.fire('Success', 'OTP verified. Please enter your new password.', 'success').then(() => {
                                                            // Step 5: Prompt for new password and confirm password
                                                            Swal.fire({
                                                                title: 'New Password',
                                                                html:
                                                                    '<input type="password" id="newPassword" class="swal2-input" placeholder="New Password">' +
                                                                    '<input type="password" id="confirmPassword" class="swal2-input" placeholder="Confirm Password">',
                                                                focusConfirm: false,
                                                                showCancelButton: true,
                                                                confirmButtonText: 'Update Password',
                                                                preConfirm: () => {
                                                                    const newPassword = Swal.getPopup().querySelector('#newPassword').value;
                                                                    const confirmPassword = Swal.getPopup().querySelector('#confirmPassword').value;

                                                                    if (!newPassword || !confirmPassword) {
                                                                        Swal.showValidationMessage('Please enter both fields.');
                                                                        return false;
                                                                    }

                                                                    if (newPassword !== confirmPassword) {
                                                                        Swal.showValidationMessage('Passwords do not match.');
                                                                        return false;
                                                                    }

                                                                    return newPassword;
                                                                }
                                                            }).then((passwordResult) => {
                                                                if (passwordResult.isConfirmed) {
                                                                    const newPassword = passwordResult.value;

                                                                    // Step 6: Update the password
                                                                    fetch('/api/account/forgot-password', {
                                                                        method: 'POST',
                                                                        headers: { 'Content-Type': 'application/json' },
                                                                        body: JSON.stringify({ phone, newPassword: newPassword })
                                                                    })
                                                                        .then(res => res.json())
                                                                        .then(updateData => {
                                                                            if (updateData.success) {
                                                                                Swal.fire('Success', 'Password updated successfully', 'success');
                                                                            } else {
                                                                                Swal.fire('Error', updateData.error, 'error');
                                                                            }
                                                                        }).catch(err => Swal.fire('Error', 'Something went wrong', 'error'));
                                                                }
                                                            });
                                                        });
                                                    } else {
                                                        Swal.fire('Error', verifyData.error, 'error');
                                                    }
                                                }).catch(err => Swal.fire('Error', 'Something went wrong during OTP verification.', 'error'));
                                        }
                                    });
                                });
                            } else {
                                Swal.fire('Error', data.error, 'error');
                            }
                        }).catch(err => Swal.fire('Error', 'Failed to send OTP.', 'error'));
                }
            });
        });
    </script>
    <!-- load heading roulet -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const headings = document.querySelectorAll('#headings-container h1');
            let currentIndex = 0;

            function showNextHeading() {
                if (currentIndex < headings.length) {
                    headings[currentIndex].classList.remove('hidden');
                    headings[currentIndex].classList.add('visible');
                    headings[currentIndex].style.animation = "bounceIn 1s ease-in-out";
                    if (currentIndex > 0) {
                        headings[currentIndex - 1].classList.add('hidden');
                    }
                    currentIndex++;
                    setTimeout(showNextHeading, 1500); // Delay between headings
                }
            }

            showNextHeading();
        });
    </script>
    <!-- Intersection -->
    <script>
        (function (document) {
            const markers = [...document.querySelectorAll('mark')];

            const observer = new IntersectionObserver(entries => {
                entries.forEach((entry) => {
                    if (entry.intersectionRatio > 0) {
                        entry.target.style.animationPlayState = 'running';
                        observer.unobserve(entry.target);
                    }
                });
            }, {
                threshold: 0.8
            });

            markers.forEach(mark => {
                observer.observe(mark);
            });
        })(document);
    </script>
