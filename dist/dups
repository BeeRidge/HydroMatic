    <!-- handle scroll -->
    <script>
        // Add this script at the bottom of your body or in a separate JS file

        function handleScroll() {
            const elements = document.querySelectorAll('.scroll-animation');
            const viewportHeight = window.innerHeight;

            elements.forEach(element => {
                const elementTop = element.getBoundingClientRect().top;

                if (elementTop < viewportHeight) {
                    element.classList.add('visible');
                }
            });
        }

        window.addEventListener('scroll', handleScroll);
        handleScroll(); // Initial check in case elements are already in view
    </script>
    <!-- Javascript modal for login/signup -->
    <script>
        function openModal() {
            document.getElementById('modal').classList.remove('hidden');
        }

        function closeModal() {
            document.getElementById('modal').classList.add('hidden');
        }

        function switchToLogin() {
            document.getElementById('login-tab').classList.add('border-blue-600');
            document.getElementById('signup-tab').classList.remove('border-green-600');
            document.getElementById('login-form').classList.remove('hidden');
            document.getElementById('signup-form').classList.add('hidden');
            document.getElementById('modal-title').innerText = 'Login';
        }

        function switchToSignUp() {
            document.getElementById('signup-tab').classList.add('border-green-600');
            document.getElementById('login-tab').classList.remove('border-blue-600');
            document.getElementById('signup-form').classList.remove('hidden');
            document.getElementById('login-form').classList.add('hidden');
            document.getElementById('modal-title').innerText = 'Sign Up';
        }
    </script>
    <!-- Signup -->
    <script>
        // Sanitize user inputs to prevent XSS
        function sanitizeInput(input) {
            return input
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#x27;")
                .replace(/\//g, "&#x2F;");
        }
        // Set up countdown timer for the OTP send button
        document.getElementById('send').addEventListener('click', async () => {
            const phone = document.getElementById('signupPhone').value;
            const sendButton = document.getElementById('send');

            if (!phone) {
                Swal.fire('Error', 'Please enter your phone number.', 'error');
                return;
            }

            // Basic validation for phone number
            if (!/^\d{11}$/.test(phone)) {
                Swal.fire('Error', 'Phone number must be exact 11 digits.', 'error');
                return;
            }

            try {
                const response = await fetch('/api/send-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ phone }),
                });
                const data = await response.json();

                if (data.success) {
                    Swal.fire('Success', 'OTP sent successfully!', 'success');

                    // Start the countdown timer
                    let countdown = 60;
                    sendButton.disabled = true;
                    sendButton.textContent = `Resend Code in ${countdown}s`;

                    const timerInterval = setInterval(() => {
                        countdown--;
                        sendButton.textContent = `Resend Code in ${countdown}s`;

                        if (countdown <= 0) {
                            clearInterval(timerInterval);
                            sendButton.disabled = false;
                            sendButton.textContent = 'Send Code';
                        }
                    }, 1000);
                } else {
                    Swal.fire('Error', 'Failed to send OTP. ' + data.error, 'error');
                }
            } catch (error) {
                console.error('Error sending OTP:', error);
                Swal.fire('Error', 'Failed to send OTP.', 'error');
            }
        });



        async function handleSignUp(event) {
            event.preventDefault();

            // Sanitize inputs before using them
            const fname = sanitizeInput(document.getElementById('firstName').value);
            const lname = sanitizeInput(document.getElementById('lastName').value);
            const phone = sanitizeInput(document.getElementById('signupPhone').value);
            const password = sanitizeInput(document.getElementById('signupPassword').value);
            const confirmPassword = sanitizeInput(document.getElementById('confirmPassword').value);
            const otp = sanitizeInput(document.getElementById('signupCode').value);

            // Basic validation
            if (!/^\d{11}$/.test(phone)) {
                Swal.fire('Error', 'Phone number must be exactly 11 digits.', 'error');
                return;
            }

            if (!/^[A-Za-z0-9]{6,}$/.test(password)) {
                Swal.fire('Error', 'Password must be at least 6 characters long and contain only letters and numbers.', 'error');
                return;
            }

            if (!/^\d{6}$/.test(otp)) {
                Swal.fire('Error', 'Code must be exactly 6 digits.', 'error');
                return;
            }

            // Check if the password and confirm password match
            if (password !== confirmPassword) {
                Swal.fire('Error', 'Passwords do not match.', 'error');
                return;
            }

            // Proceed with form submission if everything is valid
            try {
                const response = await fetch('/api/verify-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ fname, lname, phone, password, otp }),
                });
                const data = await response.json();

                if (data.success) {
                    Swal.fire('Success', 'Account created successfully!', 'success').then(() => {
                        window.location.reload();
                    });
                } else {
                    Swal.fire('Error', 'Failed to create account. ' + data.error, 'error');
                }
            } catch (error) {
                console.error('Error verifying OTP:', error);
                Swal.fire('Error', 'Failed to create account.', 'error');
            }
        }
    </script>
    <!-- Login -->
    <script>
        async function handleLogin(event) {
            event.preventDefault();

            // Get the raw input values
            let phone = document.getElementById('loginPhone').value;
            let password = document.getElementById('loginPassword').value;

            // Sanitize the inputs
            phone = sanitizeInput(phone);
            password = sanitizeInput(password);

            // Basic validation
            if (!phone || !password) {
                Swal.fire('Error', 'Both phone number and password are required.', 'error');
                return;
            }

            if (!/^\d{11}$/.test(phone)) {
                Swal.fire('Error', 'Phone number must be exactly 11 digits.', 'error');
                return;
            }

            if (!/^[a-zA-Z0-9]{6,}$/.test(password)) {
                Swal.fire('Error', 'Password must be at least 6 characters long and contain only letters and numbers.', 'error');
                return;
            }

            try {
                const response = await fetch('/api/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ phone, password }),
                });

                const data = await response.json();
                console.log('Server response:', data);

                if (data.success) {
                    localStorage.setItem('userPhone', phone);
                    sessionStorage.setItem('authToken', data.token);

                    Swal.fire('Success', 'Login successful!', 'success').then(() => {
                        window.location.href = 'http://localhost:3000/dashboard';
                    });
                } else {
                    Swal.fire('Error', data.error || 'Login failed', 'error');
                }
            } catch (error) {
                console.error('Error logging in:', error);
                Swal.fire('Error', 'Login failed. Please try again.', 'error');
            }
        }

        // Sanitization function to prevent XSS
        function sanitizeInput(input) {
            return input
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#x27;")
                .replace(/\//g, "&#x2F;");
        }
    </script>

