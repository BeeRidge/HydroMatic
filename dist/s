                <script>
    
                    function setProgress1(percent) {
                        const circle = document.querySelector('.bar1');
                        setProgress(circle, percent, 'assets/img/lettuce1.png'); // Image for bed 1
                    }
            
                    function setProgress2(percent) {
                        const circle = document.querySelector('.bar2');
                        setProgress(circle, percent, 'assets/img/lettuce2.png'); // Image for bed 2
                    }
            
                    function setProgress3(percent) {
                        const circle = document.querySelector('.bar3');
                        setProgress(circle, percent, 'assets/img/lettuce3.png'); // Image for bed 3
                    }
            
                    function setProgress4(percent) {
                        const circle = document.querySelector('.bar4');
                        setProgress(circle, percent, 'assets/img/lettuce4.png'); // Image for bed 4
                    }
            
                    function setProgress5(percent) {
                        const circle = document.querySelector('.bar5');
                        setProgress(circle, percent, 'assets/img/lettuce5.png'); // Image for bed 5
                    }
            
                    function setProgress6(percent) {
                        const circle = document.querySelector('.bar6');
                        setProgress(circle, percent, 'assets/img/lettuce6.png'); // Image for bed 6
                    }
            
                    function setProgress(circle, percent, imagePath) {
                        const radius = circle.r.baseVal.value;
                        const circumference = 2 * Math.PI * radius;
                        const offset = circumference - percent / 100 * circumference;
            
                        circle.style.strokeDasharray = `${circumference}`;
                        circle.style.strokeDashoffset = offset;
            
                        // Create image element
                        const img = document.createElement('img');
                        img.src = imagePath;
                        img.alt = 'Lettuce Image';
                        img.className = 'image-container';
                        img.style.width = '75%'; // Adjust image size
                        img.style.height = 'auto'; // Maintain aspect ratio
            
                        // Clear previous images
                        const progress = circle.closest('.progress');
                        const existingImage = progress.querySelector('.image-container');
                        if (existingImage) {
                            progress.removeChild(existingImage);
                        }
            
                        // Append image to progress container
                        progress.appendChild(img);
                    }
            
                    // Example: Set progress for each bed
                    setProgress1(15);
                    setProgress2(30);
                    setProgress3(45);
                    setProgress4(60);
                    setProgress5(75);
                    setProgress6(90);
                </script>