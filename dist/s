.progress {
    position: relative;
    width: 100px;
    height: 100px;
    background-color: #fff;
    /* Set background color of the container */
    border-radius: 50%;
    /* Ensures the container is round */
}

.progress svg {
    display: block;
    /* Ensure SVG is block-level for centering */
    margin: 0 auto;
    /* Center SVG horizontally */
}

.progress circle {
    fill: none;
    stroke: #ddd;
    /* Set background color to white */
    stroke-width: 10;
}

.progress .bar {
    fill: none;
    stroke: #4caf50;
    stroke-width: 10;
    stroke-linecap: round;
    stroke-dasharray: 0, 1000;
    transition: stroke-dasharray 1s ease;
}

.image-container {
position: absolute;
top: 50%;
left: 50%;
transform: translate(-50%, -50%);
width: 150%; /* Increase the width to make the image larger */
height: auto; /* Maintain aspect ratio */
z-index: 1; /* Ensure the image appears above the progress bar */
}

.progress-label {
    margin-top: 10px;
    /* Adjust margin as needed */
    color: #333;
    /* Adjust color */
    font-size: 14px;
    /* Adjust font size */
}
    
.bed-container {
    display: flex;
    justify-content: space-around;
    
    margin-top: 50px;
    /* Adjust spacing */
}

.bed-container .progress {
    width: 100px;
    /* Adjust width of each progress bar */
    height: 100px;
    /* Adjust height of each progress bar */
    margin: 0 10px;
    /* Adjust spacing between progress bars */
}



